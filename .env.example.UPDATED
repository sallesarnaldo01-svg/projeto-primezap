# ============================================
# PRIMEZAP AI - ENVIRONMENT VARIABLES
# ============================================
# Copie este arquivo para .env e preencha com seus valores reais

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/primezap"
DIRECT_URL="postgresql://user:password@localhost:5432/primezap"

# ============================================
# REDIS
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# JWT & AUTH
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:4000"

# ============================================
# EMAIL SERVICE (Nodemailer)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"  # true para porta 465, false para outras
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-senha-app"  # Use App Password do Gmail
SMTP_FROM="noreply@primezap.com"

# ============================================
# TELEGRAM SERVICE
# ============================================
TELEGRAM_BOT_TOKEN="123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11"

# ============================================
# SMS SERVICE (Twilio)
# ============================================
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_auth_token_here"
TWILIO_PHONE_NUMBER="+5511999999999"

# ============================================
# OPENAI (Bulk AI, Voice AI, Insights)
# ============================================
OPENAI_API_KEY="sk-..."

# ============================================
# MAILCHIMP (Marketing)
# ============================================
MAILCHIMP_API_KEY="your-mailchimp-api-key"
MAILCHIMP_SERVER_PREFIX="us1"  # Exemplo: us1, us2, us3, etc.

# ============================================
# GOOGLE ADS (Marketing - Opcional)
# ============================================
GOOGLE_ADS_CUSTOMER_ID="123-456-7890"
GOOGLE_ADS_DEVELOPER_TOKEN="your-developer-token"
GOOGLE_ADS_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_ADS_CLIENT_SECRET="your-client-secret"
GOOGLE_ADS_REFRESH_TOKEN="your-refresh-token"

# ============================================
# WHATSAPP (Evolution API)
# ============================================
EVOLUTION_API_URL="http://localhost:8080"
EVOLUTION_API_KEY="your-evolution-api-key"

# ============================================
# FACEBOOK/INSTAGRAM
# ============================================
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_VERIFY_TOKEN="your-verify-token"

# ============================================
# MONITORING & LOGGING
# ============================================
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info"  # debug, info, warn, error

# ============================================
# STORAGE (S3-compatible)
# ============================================
S3_ENDPOINT="https://s3.amazonaws.com"
S3_BUCKET="primezap-uploads"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"
S3_REGION="us-east-1"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS="60000"  # 1 minuto
RATE_LIMIT_MAX_REQUESTS="100"  # 100 requisições por minuto

# ============================================
# CORS
# ============================================
CORS_ORIGIN="http://localhost:3000,https://app.primezap.com"

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV="development"  # development, production, test
PORT="4000"

# ============================================
# FEATURE FLAGS (Opcional)
# ============================================
ENABLE_VOICE_AI="true"
ENABLE_BULK_AI="true"
ENABLE_INSIGHTS="true"
ENABLE_MARKETING_INTEGRATIONS="true"
